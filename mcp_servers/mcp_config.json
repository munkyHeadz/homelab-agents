    "defaultTimeout": 30,
    "maxConcurrentServers": 10,
    "retryAttempts": 3,
    "retryDelay": 1,
    "enableLogging": true,
    "logLevel": "INFO"
  },
  "toolCategories": {
    "infrastructure": {
      "description": "VM, container, and resource management",
      "servers": ["proxmox", "docker"]
    },
    "networking": {
      "description": "Network configuration and security",
      "servers": ["tailscale", "cloudflare", "unifi", "pihole"]
    },
    "intelligence": {
      "description": "AI agent memory and learning",
      "servers": ["mem0"]
    }
  }
